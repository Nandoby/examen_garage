{% extends 'base.html.twig' %}

{% block title %}Hello VentesController!{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            {% for voiture in voitures %}

                <div class="card mb-3 col-sm-6 col-12 col-lg-4">
                    <h3 class="card-header">{{ voiture.marque.name}} {{ voiture.modele }}</h3>
                    <img src="{{ voiture.coverImage }}" alt="">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Kilom√®tres : {{ voiture.km | number_format(0, ',', ' ') }} km</li>
                        <li class="list-group-item bg-opacity-25 bg-primary">Prix : {{ voiture.prix | format_currency('EUR', locale='fr_BE') }}</li>
                    </ul>
                    <div class="card-body d-flex justify-content-end align-items-end">
                        <a href="{{ path("ventes_slug", {slug: voiture.slug}) }}" class="btn btn-outline-warning">Voir plus</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
